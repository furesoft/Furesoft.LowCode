<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" Width="200" Height="100"
        x:Class="Furesoft.LowCode.Designer.Views.Prompt" WindowStartupLocation="CenterScreen" Title="{Binding Title}">
  <Grid RowDefinitions="*,35" Margin="3">
    <TextBox Text="{Binding Input}" Watermark="{Binding Hint}" />

    <Button Name="OkButton" Grid.Row="1" HorizontalAlignment="Right" IsDefault="True">OK</Button>
  </Grid>
</Window>
